// Simple Black & White Navigation Styles
.navigation {
    width: 100%;
    border-bottom: 1px solid hsl(var(--border));
    height: 4rem;
    display: flex;
    justify-content: center;
    background-color: hsl(var(--background));
    backdrop-filter: blur(10px);
    position: sticky;
    top: 0;
    z-index: 50;
  
    &__container {
      width: 100%;
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 0.75rem 1.25rem;
      font-size: 0.875rem;
    }
  
    &__left {
      display: flex;
      align-items: center;
      gap: 1rem;
    }
  
    &__logo {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      text-decoration: none;
      font-weight: 600;
      color: hsl(var(--foreground));
      transition: opacity 0.2s ease;
  
      &:hover {
        opacity: 0.8;
      }
    }
  
    &__brand {
      font-size: 1.1rem;
      font-weight: 700;
    }
  
    &__desktop-menu {
      display: none;
      align-items: center;
      gap: 0.5rem;
  
      @media (min-width: 768px) {
        display: flex;
      }
    }
  
    &__link {
      padding: 0.5rem 1rem;
      text-decoration: none;
      color: hsl(var(--muted-foreground));
      border-radius: 0.375rem;
      transition: all 0.2s ease;
      position: relative;
      font-weight: 500;
  
      &::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 50%;
        width: 0;
        height: 2px;
        background: hsl(var(--primary));
        transition: all 0.3s ease;
        transform: translateX(-50%);
      }
  
      &:hover {
        color: hsl(var(--foreground));
        background-color: hsl(var(--muted));
  
        &::after {
          width: 80%;
        }
      }
  
      &--active {
        color: hsl(var(--primary));
        background-color: hsl(var(--primary) / 0.1);
  
        &::after {
          width: 100%;
        }
      }
    }
  
    &__right {
      display: flex;
      align-items: center;
      gap: 1rem;
    }
  
    &__desktop-actions {
      display: none;
      align-items: center;
      gap: 1rem;

      @media (min-width: 768px) {
        display: flex;
      }
    }

    &__icon-link {
      position: relative;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 0.5rem;
      border-radius: 0.375rem;
      color: hsl(var(--foreground));
      transition: all 0.2s ease;
      text-decoration: none;

      &:hover {
        background-color: hsl(var(--muted));
        color: hsl(var(--primary));
      }

      svg {
        transition: all 0.2s ease;
      }
    }

    &__icon-badge {
      position: absolute;
      top: -2px;
      right: -2px;
      display: flex;
      align-items: center;
      justify-content: center;
      min-width: 18px;
      height: 18px;
      padding: 0 4px;
      font-size: 0.65rem;
      font-weight: 600;
      color: white;
      background-color: hsl(var(--primary));
      border-radius: 9999px;
      border: 2px solid hsl(var(--background));
    }
  }
  
  // Mobile Menu Hamburger
  .mobile-menu__trigger {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    background: none;
    border: none;
    cursor: pointer;
    border-radius: 0.375rem;
    transition: background-color 0.2s ease;
  
    &:hover {
      background-color: hsl(var(--muted));
    }
  
    @media (min-width: 768px) {
      display: none;
    }
  }
  
  .mobile-menu__hamburger {
    width: 1.5rem;
    height: 1.2rem;
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }
  
  .mobile-menu__line {
    width: 100%;
    height: 2px;
    background-color: hsl(var(--foreground));
    border-radius: 1px;
    transition: all 0.3s cubic-bezier(0.68, -0.55, 0.265, 1.55);
    transform-origin: center;
  
    &--open-1 {
      transform: rotate(45deg) translate(6px, 6px);
    }
  
    &--open-2 {
      opacity: 0;
      transform: scaleX(0);
    }
  
    &--open-3 {
      transform: rotate(-45deg) translate(6px, -6px);
    }
  }
  
  // Mobile Menu Overlay
  .mobile-menu {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 100;
    visibility: hidden;
    opacity: 0;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);

    &--open {
      visibility: visible;
      opacity: 1;
    }

    &__backdrop {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(17, 24, 39, 0.6);
      backdrop-filter: blur(8px);
    }

    &__content {
      position: absolute;
      top: 0;
      right: 0;
      width: 100%;
      max-width: 20rem;
      height: 100%;
      background-color: #FFFFFF;
      border-left: 1px solid #E5E7EB;
      display: flex;
      flex-direction: column;
      transform: translateX(100%);
      transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);

      .mobile-menu--open & {
        transform: translateX(0);
      }
    }
  
    &__header {
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 1rem 1.5rem;
      border-bottom: 1px solid #E5E7EB;
      background-color: #F9FAFB;
    }

    &__brand {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      font-weight: 700;
      font-size: 1.1rem;
      color: #111827;
    }

    &__close {
      width: 2.5rem;
      height: 2.5rem;
      display: flex;
      align-items: center;
      justify-content: center;
      background: none;
      border: none;
      cursor: pointer;
      font-size: 1.5rem;
      color: #6B7280;
      border-radius: 0.75rem;
      transition: all 0.2s ease;

      &:hover {
        color: #111827;
        background-color: #F3F4F6;
      }
    }
  
    &__links {
      flex: 1;
      padding: 1.5rem 1.5rem 1rem;
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
    }

    &__link {
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 1rem 1.25rem;
      text-decoration: none;
      color: #6B7280;
      border-radius: 0.75rem;
      transition: all 0.2s ease;
      font-weight: 600;
      font-size: 1rem;
      position: relative;
      overflow: hidden;
      opacity: 0;
      transform: translateX(2rem);
      animation: slideInMobile 0.5s ease forwards;

      &:hover {
        color: #111827;
        background-color: #F3F4F6;
      }

      &--active {
        color: #E11D48;
        background-color: rgba(225, 29, 72, 0.08);
        font-weight: 700;

        .mobile-menu__link-indicator {
          display: block;
        }
      }

      &-text {
        flex: 1;
      }

      &-indicator {
        width: 0.5rem;
        height: 0.5rem;
        background-color: #E11D48;
        border-radius: 50%;
        display: none;
      }
    }
  
    &__actions {
      padding: 1.5rem;
      border-top: 1px solid #E5E7EB;
      background-color: #F9FAFB;
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }

    &__language-buttons {
      display: flex;
      gap: 0.5rem;
      justify-content: center;
    }

    &__language-btn {
      flex: 1;
      padding: 0.75rem 1.5rem;
      font-weight: 600;
      font-size: 0.875rem;
      color: #6B7280;
      background-color: #F3F4F6;
      border: 2px solid transparent;
      border-radius: 0.75rem;
      cursor: pointer;
      transition: all 0.2s ease;

      &:hover {
        color: #111827;
        background-color: #E5E7EB;
      }

      &--active {
        background-color: #111827;
        color: #FFFFFF;
        font-weight: 700;
      }
    }

    &__auth {
      display: flex;
      flex-direction: column;
      gap: 0.75rem;

      // Target auth buttons to make them full width
      > div {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
        width: 100%;

        button,
        a {
          width: 100% !important;
          justify-content: center;
        }
      }
    }
  }
  
  // Animations
  @keyframes slideInMobile {
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }


// Mobile Profile Section Styles

// Mobile User Section
.mobile-menu__user-section {
    padding: 1rem 1.5rem;
    border-bottom: 1px solid #E5E7EB;
    background: #F9FAFB;
  }

  .mobile-menu__user-info {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .mobile-menu__user-avatar {
    width: 3rem;
    height: 3rem;
    border-radius: 50%;
    object-fit: cover;
    border: 2px solid #E5E7EB;
    flex-shrink: 0;

    &--placeholder {
      background: #F3F4F6;
      display: flex;
      align-items: center;
      justify-content: center;
      color: #6B7280;
    }
  }

  .mobile-menu__user-details {
    flex: 1;
    min-width: 0;
  }

  .mobile-menu__user-name {
    font-weight: 700;
    font-size: 0.9375rem;
    color: #111827;
    line-height: 1.3;
    word-break: break-word;
  }

  .mobile-menu__user-email {
    font-size: 0.8125rem;
    color: #6B7280;
    line-height: 1.3;
    margin-top: 0.25rem;
    word-break: break-all;
  }

  // Mobile Menu Divider
  .mobile-menu__divider {
    height: 1px;
    background: #E5E7EB;
    margin: 1rem 0;
  }
  
  // Update mobile menu link to handle icons
  .mobile-menu__link {
    display: flex;
    align-items: center;
    justify-content: flex-start;
    gap: 0.75rem;
    padding: 1rem 1.25rem;
    text-decoration: none;
    color: #6B7280;
    border-radius: 0.75rem;
    transition: all 0.2s ease;
    font-weight: 600;
    font-size: 1rem;
    position: relative;
    overflow: hidden;
    opacity: 0;
    transform: translateX(2rem);
    animation: slideInMobile 0.5s ease forwards;
    background: none;
    border: none;
    cursor: pointer;
    width: 100%;
    text-align: left;

    &:hover {
      color: #111827;
      background-color: #F3F4F6;
    }

    &--active {
      color: #E11D48;
      background-color: rgba(225, 29, 72, 0.08);
      font-weight: 700;

      svg {
        color: #E11D48;
      }
    }

    &--danger {
      color: #E11D48;

      &:hover {
        color: #E11D48;
        background-color: rgba(225, 29, 72, 0.08);
      }

      svg {
        color: #E11D48;
      }
    }

    svg {
      flex-shrink: 0;
      color: #6B7280;
      transition: color 0.2s ease;
    }

    &:hover svg {
      color: #111827;
    }

    &-text {
      flex: 1;
    }

    &-indicator {
      width: 0.5rem;
      height: 0.5rem;
      background-color: #E11D48;
      border-radius: 50%;
      display: none;
    }
  }